<Window x:Class="EVEMakeMoney.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVEMakeMoney"
        mc:Ignorable="d"
        Title="EVEMakeMoney" Height="800" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal">
            <Button x:Name="LoadButton" Content="加载蓝图数据" Width="120" Height="35" Click="LoadButton_Click"/>
            <Button x:Name="LoadMarketButton" Content="加载市场数据" Width="120" Height="35" Margin="10,0,0,0" Click="LoadMarketButton_Click"/>
            <Button x:Name="CalculateCostButton" Content="计算成本" Width="120" Height="35" Margin="10,0,0,0" Click="CalculateCostButton_Click"/>
            <Button x:Name="MarketAnalysisButton" Content="市场热门指数" Width="120" Height="35" Margin="10,0,0,0" Click="MarketAnalysisButton_Click"/>
            <TextBlock Text="ME:" VerticalAlignment="Center" Margin="30,0,5,0"/>
            <TextBox x:Name="METextBox" Width="50" Height="25" Text="0" VerticalAlignment="Center"/>
            <TextBlock Text="TE:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="TETextBox" Width="50" Height="25" Text="0" VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" Margin="20,0,0,0" VerticalAlignment="Center" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="搜索:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchBox" Width="300" Height="25" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>
            <ProgressBar x:Name="MarketProgress" Height="20" Visibility="Collapsed"/>
            <TextBlock x:Name="ProgressText" Visibility="Collapsed" Margin="0,5,0,0"/>
        </StackPanel>
        
        <DataGrid x:Name="BlueprintGrid" Grid.Row="2" Grid.Column="0" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="BlueprintGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="名字" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="蓝图ID" Binding="{Binding BlueprintTypeId}" Width="100"/>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="80"/>
                <DataGridTextColumn Header="最大生产限制" Binding="{Binding MaxProductionLimit}" Width="120"/>
                <DataGridTextColumn Header="ME" Binding="{Binding ME}" Width="60"/>
                <DataGridTextColumn Header="TE" Binding="{Binding TE}" Width="60"/>
                <DataGridTextColumn Header="制造成本" Binding="{Binding ManufacturingCost, StringFormat={}{0:N0}}" Width="150"/>
                <DataGridTextColumn Header="发明成本" Binding="{Binding InventionCost, StringFormat={}{0:N0}}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="2" Grid.Column="1" Margin="10" Header="成本链条">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="CostBreakdownText" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Margin="10" Header="控场分析结果" Height="200">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="AnalysisResultText" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
